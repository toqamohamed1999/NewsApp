<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.login.presentation.ui.LoginFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRieght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="219dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="@string/LogIn"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTop"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineRieght" />

    <EditText
        android:id="@+id/email_ediText"
        android:layout_width="239dp"
        android:layout_height="41dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/email"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTop"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogin" />

    <EditText
        android:id="@+id/password_ediText"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/password"
        app:layout_constraintEnd_toEndOf="@+id/email_ediText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/email_ediText"
        app:layout_constraintTop_toBottomOf="@+id/email_ediText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Login_btn"
        android:layout_width="142dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btnback"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/password_ediText"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="@+id/password_ediText"
        app:layout_constraintTop_toBottomOf="@+id/password_ediText" />

    <TextView
        android:id="@+id/textViewgToSignUp"
        android:layout_width="176dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/Login_btn"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toStartOf="@+id/Login_btn"
        app:layout_constraintTop_toBottomOf="@+id/Login_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>