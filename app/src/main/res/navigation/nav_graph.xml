<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="eg.gov.iti.jets.newsapp.auth.signup.presentation.ui.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="eg.gov.iti.jets.newsapp.auth.login.presentation.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="eg.gov.iti.jets.newsapp.newsscreen.presentation.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="eg.gov.iti.jets.newsapp.newsdetails.presentation.ui.NewsDetailsFragment"
        android:label="NewsDetailsFragment" >
        <argument
            android:name="newsDetails"
            app:argType="eg.gov.iti.jets.newsapp.newsscreen.domain.model.Article" />
    </fragment>
    <fragment
        android:id="@+id/favouriteListFragment"
        android:name="eg.gov.iti.jets.newsapp.favourite.presentation.ui.FavouriteListFragment"
        android:label="fragment_favourite_list"
        tools:layout="@layout/fragment_favourite_list" />
    <fragment
        android:id="@+id/secondProfileFragment"
        android:name="eg.gov.iti.jets.newsapp.profile.presentation.ui.SecondProfileFragment"
        android:label="fragment_second_profile"
        tools:layout="@layout/fragment_second_profile" >
        <action
            android:id="@+id/action_secondProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/secondProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="eg.gov.iti.jets.newsapp.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>